<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class = "alert">
    <div class= "alert-box">
    <ul>
      <h3>2 errors prohibited this book from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
      <div class="error_explanation"></div>
      <%= message %>
      <% end %>
    </ul>
    </div>
<% end %>
<%= form_with model: @book,local: true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_field :body %>
</div>
<%= f.submit %>
<% end %>