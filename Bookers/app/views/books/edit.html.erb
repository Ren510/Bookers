<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "alert">
    <div class= "alert-box">
    <ul>
      <h3>2 errors prohibited this book from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
      <div class="error_explanation"></div>
      <%= message %>
      <% end %>
    </ul>
    </div>
<% end %>

<h4>Title</h4>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>