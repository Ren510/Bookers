
<h1>編集画面</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '保存' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Destroy", book_path(@book.id),method: :delete,"data-confirm" => "Are you sure?" %>